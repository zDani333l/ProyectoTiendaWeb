@model ProyectoWebAppTienda.Models.DetalleProductoViewModel
@{
    ViewBag.Title = "Detalle Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="ps-main">
    <div class="test">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 ">
                </div>
            </div>
        </div>
    </div>
    <div class="ps-product--detail pt-60">
        <div class="ps-container">
            <div class="row">
                <div class="col-lg-10 col-md-12 col-lg-offset-1">
                    <div class="ps-product__thumbnail">
                        <div class="ps-product__preview">
                            <div class="ps-product__variants">
                                <div class="item"><img src="/@Model.Img1.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt=""></div>
                                <div class="item"><img src="/@Model.Img2.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt=""></div>
                                <div class="item"><img src="/@Model.Img3.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt=""></div>
                            </div>

                        </div>
                        <div class="ps-product__image">
                            <div class="item"><img class="zoom" src="/@Model.Img1.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt="" data-zoom-image="/@Model.Img1.Substring(Server.MapPath("~").Length).Replace("\\", "/")"></div>
                            <div class="item"><img class="zoom" src="/@Model.Img2.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt="" data-zoom-image="/@Model.Img2.Substring(Server.MapPath("~").Length).Replace("\\", "/")"></div>
                            <div class="item"><img class="zoom" src="/@Model.Img3.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt="" data-zoom-image="/@Model.Img3.Substring(Server.MapPath("~").Length).Replace("\\", "/")"></div>
                        </div>
                    </div>
                    <div class="ps-product__thumbnail--mobile">
                        <div class="ps-product__main-img"><img src="/@Model.Img1.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt=""></div>
                        <div class="ps-product__preview owl-slider" data-owl-auto="true" data-owl-loop="true" data-owl-speed="5000" data-owl-gap="20" data-owl-nav="true" data-owl-dots="false" data-owl-item="3" data-owl-item-xs="3" data-owl-item-sm="3" data-owl-item-md="3" data-owl-item-lg="3" data-owl-duration="1000" data-owl-mousedrag="on">
                            <img src="/@Model.Img1.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt="">
                            <img src="/@Model.Img2.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt="">
                            <img src="/@Model.Img3.Substring(Server.MapPath("~").Length).Replace("\\", "/")" alt="">
                        </div>
                    </div>
                    <div class="ps-product__info">

                        <h1>@Model.NombrePrudcto</h1>

                        <p class="ps-product__category">
                            @for (int i = 0; i < Model.Categorias.Length; i++)
                            {
                                if (i == Model.Categorias.Length)
                                {
                                    <a href="#">@Model.Categorias[i]</a>
                                }
                                else
                                {
                                    <a href="#">@Model.Categorias[i],</a>
                                }

                            }
                        </p>
                        <h3 class="ps-product__price">$ @Model.Precio <del>$ 120.000</del></h3>
                        <div class="ps-product__block ps-product__quickview">
                            <h4>DESCRIPCION</h4>
                            <p>@Model.Descripcion</p>
                        </div>

                        <div class="ps-product__block ps-product__size">
                            <h4>TALLA<a href="#">Size chart</a></h4>
                            <select class="ps-select selectpicker">
                                @for (int i = 0; i < @Model.Tallas.Length; i++)
                                {
                                    <option value="@i+1">@Model.Tallas[i]</option>
                                }
                            </select>
                            <div class="form-group">
                                <input class="form-control" type="number" value="1">
                            </div>
                        </div>
                        <div class="ps-product__shopping">
                            <a class="ps-btn mb-10" href="cart.html">Agregar Al Carrito<i class="ps-icon-next"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</main>